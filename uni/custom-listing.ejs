```{=html}
<ul>
    <div class="quarto-listing quarto-listing-container-grid" id="custom-listing">
        <div class="list grid quarto-listing-cols-3">
          <% for (const item of items) { %>
            <div class="g-col-1">
              <a href="<%- item.href %>" class="quarto-grid-link">
                <div class="quarto-grid-item card h-100 card-left">
                  <% if (item.image) { %>
                    <p class="card-img-top">
                      <img loading="lazy" src="<%- item.image %>" class="thumbnail-image card-img" style="height: 150px;">
                    </p>
                  <% } %>
                  <div class="card-body post-contents">
                    <h5 class="no-anchor card-title listing-title">
                      <%= item.name %>
                    </h5>
                    <div class="card-text listing-description">
                      <%= item['custom-field'] %>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          <% } %>
        </div>
      </div>
</ul>
